<div class="navbar">
  <div class="nav-logo">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.gif" %>
      <p>Hapogys</p>
    <% end %>


    <div class="nav-links">
      <li class="nav-item">
        <%= link_to "Accueil", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Vos élus", representatives_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Rejoignez-nous", joins_path, class: "nav-link" %>
      </li>
    </div>

    <div class="actions">
      <% if user_signed_in? %>
        <div class="logout-btn">
          <%= button_to "Déconnexion", destroy_user_session_path, method: :delete, class: "log-btn"  %>
        </div>
      <% else %>
        <div class="ghost">
        </div>
      <% end %>
    </div>
  </div>

  <div class="search">
    <%= form_tag(articles_path, method: :get) do %>
      <div class="search-form">
        <div class="search-item">
          <%= text_field_tag :search, params[:search], class: "search-field" %>
        </div>
        <div class="search-item">
          <%= submit_tag 'Rechercher', name: nil, class: "search-btn" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
