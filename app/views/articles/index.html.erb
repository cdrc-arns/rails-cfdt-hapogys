<div class="banner">
  <%= image_tag "banner.jpg" %>
</div>

<% if user_signed_in? %>
  <div class="new-btn-container">
    <div class="new-btn">
        <%= link_to "Nouvel article", new_article_path, class: "btn btn-flat" %>
    </div>
  </div>
<% end %>

<div class="articles-container">
  <h2>Actualit√©s</h2>
  <div class="card-container">
        <% @articles.each do |article| %>
          <div class="card-wrapper">
            <div class="card-photo">
              <% if article.photo.key %>
                <%= cl_image_tag article.photo.key, class: "article-img" %>
              <% else %>
                <img src="https://res.cloudinary.com/dj5ui9nro/image/upload/v1669048484/vtnlkwtj3xuyqmeicgag.jpg" alt="#">
              <% end %>
            </div>
              <div class="card-elements">

                <div class="card-content">

                  <div class="card-title">
                    <p><%= article.titre %></p>

                    <% if user_signed_in? %>
                      <div class="user-buttons">
                        <%= link_to edit_article_path(article), class: 'btn btn-flat' do %>
                          <i class="fa-solid fa-pencil"></i>
                        <% end %>
                          <%= link_to article_path(article) ,
                            method: :delete,
                            data: { confirm: "Confirmer la suppression de l'article ?" }, class: "btn btn-flat" do %>
                            <i class="fa-solid fa-trash"></i>
                          <% end %>
                      </div>
                    <% end %>
                  </div>

                  <div class="card-description">
                    <p><%= article.description %></p>
                  </div>
                </div>

                <div class="card-attachment">
                      <div class="ghost">
                      </div>
                      <div class="attachment-button">
                        <%= link_to "Ouvrir le document", article.file_url, target: :_blank, class: "dl-link" %>
                      </div>
                    </div>
              </div>
          </div>
        <% end %>
  </div>
</div>

