<div class="form-wrapper">
    <%= simple_form_for(article) do |f| %>
      <div class="form-content">
        <div class="form-input">
          <%= f.input :titre,
                      autofocus: true %>
        </div>

        <div class="form-input">
          <%= f.input :description,
                      autofocus: true, class: "description-input" %>
        </div>

        <div class="form-input">
          <%= f.input :photo, as: :file %>
        </div>

        <div class="form-input">
          <%= f.input :file, label: 'Document Pdf', as: :file %>
        </div>
      </div>
      <div class= "form-button">
        <%= f.button :submit, "Valider", class: "form-button-text"%>
      </div>
    <% end %>
  </div>
