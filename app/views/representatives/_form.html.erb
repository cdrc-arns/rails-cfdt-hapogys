<div class="form-wrapper new-yacht-form">
    <%= simple_form_for(representative) do |f| %>
      <div class="form-content">
        <div class="form-input">
          <%= f.input :titre,
                      autofocus: true %>
        </div>

        <div class="form-input">
          <%= f.input :description,
                      autofocus: true %>
        </div>

        <div class="form-input">
          <%= f.input :email,
                      autofocus: true %>
        </div>

        <div class="form-input">
          <%= f.input :photo, as: :file %>
        </div>
      </div>

      <div class= "form-button">
        <%= f.button :submit, "Valider", class: "form-button-text"%>
      </div>
    <% end %>
  </div>
